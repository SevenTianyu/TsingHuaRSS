@import "~common/stylus/index"

.home-page
  position fixed
  top 40px
  bottom 0
  width 100%
  .home-page-content
    height 100%
    overflow hidden
    .slider-wrapper
      position relative
      width 100%
      height 0
      padding-top 50%
      overflow hidden
      .slider-content
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        overflow hidden
    .newList
      .model
        &.morning
          color rgb(51,51,51)
          background-color rgb(255,255,255)
          
        .new
          display flex
          position relative
          padding 10px 0 20px 0
          border-bottom solid gray 1px
         
          margin 0 20px
          border-left 0
          &.morning
            border-1px(rgba(7,17,27,0.1))
         
          .biaoti
            height 20px
            position absolute
            left 0
            margin-top 10px

            .img_gzh
              vertical-align top
              display inline-block
              margin-top -10px
              img
                display inline-block
                width 30px
                height 30px
            .name_gzh
              font-size 10px
              vertical-align top
          .zhuti
            margin-top 40px
            
            .title
              display inline-block
              font-size 13px
              vertical-align top
              margin-right 140px
              height 25px
              line-height 25px
            .avatar
              display inline-block
              vertical-align top
              margin-top -25px
              float right
              img
                width 120px
                height 80px
                margin-left 90px
               

          .date
            font-size 12px
            position absolute
            padding-top 20px
            color #a7a7aa
            bottom 10px
            left 0

            
            

          
